{
        "agent": {
                "metrics_collection_interval": 60,
                "run_as_user": "root"
        },
        "logs": {
                "logs_collected": {
                        "files": {
                                "collect_list": [
                                        {
                                                "file_path": "/var/log/wise/trace.log",
                                                "log_group_name": "$LOG_AP_SERVER",
                                                "log_stream_name": "trace-{instance_id}-{hostname}"
                                        },
                                        {
                                                "file_path": "/var/log/wise/info.log",
                                                "log_group_name": "$LOG_AP_SERVER",
                                                "log_stream_name": "info-{instance_id}-{hostname}"
                                        },
                                        {
                                                "file_path": "/var/log/wise/error.log",
                                                "log_group_name": "$LOG_AP_SERVER",
                                                "log_stream_name": "error-{instance_id}-{hostname}"
                                        },
                                        {
                                                "file_path": "/var/log/wise/debug.log",
                                                "log_group_name": "$LOG_AP_SERVER",
                                                "log_stream_name": "debug-{instance_id}-{hostname}"
                                        },
                                        {
                                                "file_path": "/var/log/wise/xray-daemon.log",
                                                "log_group_name": "$LOG_AP_SERVER",
                                                "log_stream_name": "xray-daemon-{instance_id}-{hostname}"
                                        }
                                ]
                        }
                }
        }
}
